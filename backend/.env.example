###############################################
# Example environment file for backend
# Copy to `.env` and fill the real values locally or in your hosting provider's secret store.
###############################################

# MongoDB connection string (MongoDB Atlas recommended)
MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/mydb?retryWrites=true&w=majority

# Clerk credentials (replace with values from Clerk dashboard)
CLERK_API_KEY=your-clerk-backend-api-key
CLERK_FRONTEND_API=your-clerk-frontend-api
CLERK_JWT_KEY=your-clerk-jwt-verification-key

# Server settings
PORT=5000
NODE_ENV=production

# Comma-separated allowed origins for CORS
# Example: http://localhost:5173,https://my-app.vercel.app,https://www.my-domain.com
ALLOWED_ORIGINS=http://localhost:5173,https://my-app.vercel.app

# Storage / third-party keys
#S3_BUCKET=your-bucket
#S3_REGION=your-region
#S3_ACCESS_KEY_ID=your-access-key
#S3_SECRET_ACCESS_KEY=your-secret

# Other secrets
#JWT_SECRET=your_jwt_secret
#STRIPE_SECRET=sk_live_...
